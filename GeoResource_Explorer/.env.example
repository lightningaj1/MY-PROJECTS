# Environment Configuration Example
# Copy this file to .env and update values with your actual configuration

# Application
ENV=production
DEBUG=False
PORT=5000

# Security
SECRET_KEY=your-secret-key-here-generate-with-secrets-token-hex-32

# Database (SQLite by default, can be changed to PostgreSQL for production)
DATABASE_URL=sqlite:///minerals.db

# File Upload
MAX_UPLOAD_SIZE_MB=5
ALLOWED_EXTENSIONS=png,jpg,jpeg,webp

# Session
SESSION_TIMEOUT_MINUTES=30
SESSION_COOKIE_SECURE=True

# Rate Limiting
RATE_LIMIT_LOGIN=5 per minute
RATE_LIMIT_REGISTER=3 per minute

# CORS
CORS_ORIGINS=http://localhost:3000

# Logging
LOG_LEVEL=INFO
